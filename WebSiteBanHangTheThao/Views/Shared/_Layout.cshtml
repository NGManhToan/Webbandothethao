<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="pragma" content="no-cache" />
    <meta http-equiv="cache-control" content="max-age=604800" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Website title - bootstrap html template</title>
    <link href="~/Content/images/favicon.ico" rel="shortcut icon" type="image/x-icon">
    <!-- jQuery -->
    <script src="~/Scripts/jquery-2.0.0.min.js" type="text/javascript"></script>
    <!-- Bootstrap4 files-->
    <script src="~/Scripts/bootstrap.bundle.min.js" type="text/javascript"></script>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <!-- Font awesome 5 -->
    <link href="fonts/css/fontawesome/~/Content/all.min.css" type="text/css" rel="stylesheet">
    <!-- custom style -->
    <link href="~/Content/css/ui.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/responsive.css" rel="stylesheet" type="text/css" />
    <!-- custom javascript -->
    <script src="~/Scripts/script.js" type="text/javascript"></script>
    <script src="~/Scripts/js/script.js"></script>
    <link href="~/Content/css/style.css" rel="stylesheet" />
    <header class="section-header">
        <section class="header-main border-bottom" style="background-color: floralwhite;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-2 col-lg-3 col-md-12">
                        <a href="~/Home/Trangchu" class="brand-wrap">
                            <img class="logo" src="~/Content/images/items/logo.jpg" style="max-height:100%;width:200px;margin-left:2%">
                        </a> <!-- brand-wrap.// -->
                    </div>
                    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

                    @using (Html.BeginForm("KQTimKiem", "Timkiem"))
                    {

                        <div class="box">
                            <div class="container-1">
                                <input type="text" name="sTuKhoa" id="search" placeholder="Search..." />
                                <input type="submit" value="Tìm kiếm" style="margin-top: -10px;margin-left: 20px;background: coral;
                                    height: 37px;border-radius: 20px;z-index:10;border: none;position:absolute" />

                            </div>


                        </div>

                    }


                    

                    <div class="widgets-wrap float-md-right" style="margin-left:45%">
                        <div class="widget-header mr-3">
                            <a href="#" class="widget-view">
                                @if (Session["idUser"] != null)
                                {

                                    
                                    <a href="~/Admin/DangNhapForAdmin/Dangnhap">Trang Admin | </a>


                                    <a href="~/Home/Dangxuat">Đăng xuất</a>
                                }
                                else
                                {
                                    <a href="~/Home/Dangnhap">Đăng nhập | </a>
                                    <a href="~/Home/Dangky">Đăng ký</a>
                                }
                            </a>

                        </div>

                        <div class="widget-header">
                            <a href="@Url.Action("GioHang","Cart")" class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span class="notify"> @Session["count"]</span>
                                </div>
                                <small class="text"> Giỏ hàng </small>
                            </a>
                        </div>
                    </div> <!-- widgets-wrap.// -->

                </div> <!-- col.// -->
            </div> <!-- row.// -->

        </section> <!-- header-main .// -->


</head>
@RenderBody()
<body>
  


    <!-- ========================= FOOTER ========================= -->
    <footer class="section-footer bg-secondary">
        <div class="container">
            <section class="footer-top padding-y-lg text-white">
                <div class="row">
                    <aside class="col-md col-6">
                        <h6 class="title">Company</h6>
                        <ul class="list-unstyled">
                            <li> <a href="~/Contract/Contact">About us</a></li>
                            <li> <a href="~/About/About">Contract</a></li>

                        </ul>
                    </aside>
                   

                    <aside class="col-md col-6">
                        <h6 class="title">Social</h6>
                        <ul class="list-unstyled">
                            <li><a href="https://www.facebook.com/profile.php?id=100049226589336"> <i class="fab fa-facebook"></i> Facebook </a></li>
                            <li><a href="#"> <i class="fab fa-instagram"></i> Instagram </a></li>
                        </ul>
                    </aside>
                </div> <!-- row.// -->
            </section>	<!-- footer-top.// -->
            <section class="footer-bottom text-center">

                <p class="text-white">Privacy Policy - Terms of Use - User Information Legal Enquiry Guide</p>
                <p class="text-muted"> &copy 2022 Company name, All rights reserved </p>
                <br>
            </section>
        </div><!-- //container -->
    </footer>
    <!-- ========================= FOOTER END // ========================= -->

</body>
</html>
