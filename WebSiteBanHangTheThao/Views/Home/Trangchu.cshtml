@model  WebSiteBanHangTheThao.Models.HomeModel
@{
    ViewBag.Title = "Trangchu";
}

<div class="container">
    <section class="section-main padding-y">
        <main class="card">
            <div class="card-body">
                <div class="row">
                    <aside class="col-lg col-md-3 flex-lg-grow-0">
                        <h6>DANH MỤC</h6>
                        <nav class="nav-home-aside">
                            <ul class="menu-category">
                                @foreach (var item in Model.ListCategory)
                                {
                                    <li>

                                        @Html.ActionLink(item.Name, "Danhsachloaisanpham", "Catogory", new { @id = item.Id }, null)
                                    </li>
                                }



                            </ul>
                        </nav>
                    </aside> <!-- col.// -->
                    <div class="col-md-9 col-xl-7 col-lg-7">
                        <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                        <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                                <li data-target="#carousel1_indicator" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="~/Content/images/items/anhmau.jpg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide2.jpg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="~/Content/images/banners/slide3.jpg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->
                    </div> <!-- col.// -->
                    <div class="col-md d-none d-lg-block flex-grow-1">
                        <aside class="special-home-right">
                            <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>
                            @foreach (var item in Model.ListCategory.Take(4))
                            {
                                <div class="card-banner border-bottom">
                                    <div class="py-3" style="width:80%">
                                        <h6 class="card-title">@item.Name</h6>
                                        <a href="@Url.Action("Loaisanpham","Catogory",new {id=item.Id })" class="btn btn-secondary btn-sm"> Source now </a>
                                        <img src="~/Content/images/items/@item.Avata" height="80" class="img-bg" />
                                    </div>


                                </div>
                            }


                        </aside>
                    </div> <!-- col.// -->
                </div> <!-- row.// -->
            </div> <!-- card-body.// -->
        </main> <!-- card.// -->
    </section>
    <!-- ========================= SECTION MAIN END// ========================= -->
    <!-- =============== SECTION DEAL =============== -->
    <section class="padding-bottom">
        <div class="card card-deal">
            <div class="col-heading content-body">
                <header class="section-heading">
                    <h3 class="section-title">Giảm giá sốc</h3>
                </header><!-- sect-heading -->
                <div class="timer">
                    <img src="~/Content/images/items/sale..jpg" alt="Second slide"width=300px/>
                </div>
            </div> <!-- col.// -->
            <div class="row no-gutters items-wrap">
                @foreach (var item in Model.ListProduct.Take(5))
                {
                    <div class="col-md col-6">
                        <figure class="card-product-grid card-sm">
                            <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="img-wrap">
                                <img src="~/Content/images/items/@item.Avata">
                            </a>
                            <div class="text-wrap p-3">
                                <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="title">@item.Name</a>
                                <b>@item.Price VNĐ</b>
                                <br />
                                <span class="badge badge-danger">@item.Sale</span>
                            </div>
                        </figure>
                    </div>
                }
                <!-- col.// -->
            </div>
        </div>
    </section>
    <!-- =============== SECTION DEAL // END =============== -->
    <!-- =============== SECTION 1 =============== -->
    <section class="padding-bottom">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Hàng mới về</h4>
        </header>
        <div class="card card-home-category">
            <div class="row no-gutters">
                <div class="col-md-3">

                    <div class="home-category-banner bg-light-orange">
                        <img src="~/Content/images/items/new.jpg" alt="Second slide" width=300px"/>
                    </div>
                </div> <!-- col.// -->
                <div class="col-md-9">
                    <ul class="row no-gutters bordered-cols">
                        @foreach (var item in Model.ListProduct.Take(8))
                        {
                            <li class="col-6 col-lg-3 col-md-4">
                                <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="item">
                                    <div class="card-body">
                                        <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="title">@item.Name</a>
                                        <img class="img-sm float-right" src="~/Content/images/items/@item.Avata">
                                        <p class="text-muted"><i class="fa fa-map-marker-alt"></i> @item.Price</p>
                                    </div>
                                </a>
                            </li>
                        }


                    </ul>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card.// -->
    </section>
    <!-- =============== SECTION 1 END =============== -->
    <!-- =============== SECTION 2 =============== -->
    <!-- =============== SECTION 2 END =============== -->
    <!-- =============== SECTION REQUEST =============== -->

    <section class="padding-bottom-sm">
        <header class="section-heading heading-line">
            <h4 class="title-section text-uppercase">Sản phẩm đề cập</h4>
        </header>
        <div class="row row-sm">
            @foreach (var item in Model.ListProduct)
            {
                <div class="col-xl-2 col-lg-3 col-md-4 col-6">
                    <div href="#" class="card card-sm card-product-grid">
                        <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="img-wrap"> <img src="~/Content/images/items/@item.Avata"> </a>
                        <figcaption class="info-wrap">
                            <a href="@Url.Action("Chitietsanpham","Sanpham",new {id=item.Id })" class="title">@item.Name</a>
                            <div class="price mt-1">@item.Price</div> <!-- price-wrap.// -->
                        </figcaption>
                    </div>
                </div>
            }
            <!-- col.// -->
            <!-- col.// -->
        </div> <!-- row.// -->
    </section>


</div>

